---

<Layout title="Blog">
  <div class="max-w-xl">
    <h1>Blog</h1>

    <!-- Static posts / First 10 -->
     {
      firstPosts.map(async(post, index) => {
        const entry = await getEntry("projects", post.slug);
        const { Content } = await entry.render();
        return (
          <article>
            <hr/>
            <a href={`/projects/${post.slug}`}>
              <h2>{post.data.title}</h2>
            </a>
            <p>{format(post.data.date, "yyyy-MM-dd")}</p>
            <Content />
          </article>
        )
      })
     }

    <Feed client:load pageSize={5} />
